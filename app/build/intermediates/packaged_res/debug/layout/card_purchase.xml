                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="start|top"
                    android:lineSpacingExtra="6sp"
                    android:padding="8dp"
                    android:text="@string/purchase_trial_exp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/diag_round_white"
                android:orientation="vertical"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="48dp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/anton"
                        android:gravity="start|top"
                        android:lineSpacingExtra="6sp"
                        android:padding="8dp"
                        android:text="@string/purchase_full"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        tools:visibility="visible" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:visibility="visible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="48dp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/diag_round_white"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/anton"
                        android:gravity="center"
                        android:lineSpacingExtra="6sp"
                        android:padding="8dp"
                        android:text="@string/full_price"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        tools:visibility="visible" />
                </LinearLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.3"
                    android:background="@color/black"
                    tools:visibility="visible" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="48dp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="start|top"
                    android:lineSpacingExtra="6sp"
                    android:padding="8dp"
                    android:text="@string/purchase_full_exp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
